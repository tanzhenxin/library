<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory
        android:key="pref_user_account_settings"
        android:title="@string/pref_user_account_title" >

        <Preference
            android:key="pref_key_edit_account"
            android:summary="High"
            android:title="@string/pref_title_edit_account" />

        <com.gtcc.library.ui.AlertDialogPreference
            android:dialogMessage="@string/pref_logout_confirm"
            android:dialogTitle="@string/pref_logout_confirm"
            android:key="pref_key_log_out"
            android:negativeButtonText="@string/cancel"
            android:positiveButtonText="@string/ok"
            android:title="@string/pref_title_log_out" >
        </com.gtcc.library.ui.AlertDialogPreference>
    </PreferenceCategory>

    <PreferenceCategory
        android:key="pref_others"
        android:title="@string/pref_others" >

        <Preference
            android:key="pref_key_check_update"
            android:title="@string/pref_title_check_update" />

        <Preference
            android:key="pref_key_feedback"
            android:title="@string/pref_title_feedback" />

        <Preference
            android:key="pref_key_about"
            android:title="@string/pref_title_about" />
    </PreferenceCategory>

</PreferenceScreen>