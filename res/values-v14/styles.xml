<resources>

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!-- API 14 theme customizations can go here. -->
    </style>

    <style name="Theme.Library" parent="@style/Theme.Sherlock.Light">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_library</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Library</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Library</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Library</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Library</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Library</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_library</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_library</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Library</item>
    </style>

    <style name="ActionBar.Solid.Library" parent="@style/Widget.Sherlock.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_library</item>
        <item name="android:backgroundStacked">@drawable/ab_background_textured_library</item>
        <item name="android:backgroundSplit">@drawable/ab_background_textured_library</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Library</item>
    </style>

    <style name="ActionBar.Transparent.Library" parent="@style/Widget.Sherlock.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_library</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Library</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Library.Widget" parent="@style/Theme.Sherlock">
        <item name="android:popupMenuStyle">@style/PopupMenu.Library</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Library</item>
    </style>

</resources>